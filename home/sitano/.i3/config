# Background
exec --no-startup-id nitrogen --restore

# Keyboard map
exec --no-startup-id setxkbmap "us(colemak), ru" ",winkeys" "grp:alt_shift_toggle"

# Set LCD brightness
exec xbacklight -set 90

# Windows borders
set $width pixel 2

new_window $width
new_float $width

# Workspaces
set $out1 DVI-I-1
set $out2 DVI-I-2

workspace 1 output $out1
workspace 2 output $out1
workspace 3 output $out1
workspace 4 output $out1
workspace 5 output $out2
workspace 6 output $out2
workspace 7 output $out2
workspace 8 output $out2

exec i3-msg 'rename workspace 1 to "1: www"'
exec i3-msg 'rename workspace 2 to "2: idea"'
exec i3-msg 'rename workspace 5 to "5: msgs"'

workspace www  output $out1
workspace idea output $out1
workspace msgs output $out2

set $mod Mod4

# Lockscreen
bindsym $mod+l exec i3lock -u -d -t -i /home/sitano/.i3/ubuntu-linux-final-2534.png -c 000000

# Nautilius
bindsym $mod+d exec nautilus --no-desktop

# Audio volume controls
#bindsym $mod+KP_Add exec amixer -q -c 0 sset PCM,0 5dB+
#bindsym $mod+KP_Subtract exec amixer -q -c 0 sset PCM,0 5dB-

bindsym $mod+KP_Add exec amixer -q set Master 5dB+ unmute
bindsym $mod+KP_Subtract exec amixer -q set Master 5dB- unmute

bindsym XF86AudioRaiseVolume exec amixer -q set Master 5dB+ unmute
bindsym XF86AudioLowerVolume exec amixer -q set Master 5dB- unmute
bindsym XF86AudioMute exec amixer -q set Master toggle

# Printscreen
bindsym Print exec scrot 'f%Y-%m-%d-%s_$wx$h.png' -e 'mv $f /home/sitano/'

# Windows
